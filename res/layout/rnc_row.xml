<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:paddingTop="4dip"
	android:paddingBottom="4dip"
	
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dip"
        android:orientation="horizontal"
        android:padding="3dip" >
        
                <TextView
                    android:id="@+id/lblGreenStick"
                    android:layout_width="13dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_background"
                    android:text="" />

        <LinearLayout
            android:id="@+id/lnl_infoPoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="2dip" >

            <TextView
                android:id="@+id/txtRazonSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:text="Razón Social"
                android:textColor="#7CBA00"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtRnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingBottom="5dip"
                android:text="RNC"
                android:textColor="#7CBA00"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtFechaConstitucion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Fecha Constitución"
                android:textColor="#515151"
                android:textSize="12dp"
                 />
            
            
                <TextView
                android:id="@+id/txtActividadPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividad Principal"
                android:textColor="#515151"
                android:textSize="12dp"             />
                
                 <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:textColor="#515151"
                android:textSize="12dp" />
                 
                <TextView
                android:id="@+id/txtDireccionSector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sector"
                android:textColor="#515151"
                android:textSize="12dp" />
                
                <TextView
                android:id="@+id/txtDireccionCalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle"
                android:textColor="#515151"
                android:textSize="12dp" />
                
                <TextView
                android:id="@+id/txtDireccionNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número"
                android:textColor="#515151"
                android:textSize="12dp" />
                                
                 
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            
           
            android:padding="3dip"
            
            android:layout_alignParentRight="true" >
        </LinearLayout>

</RelativeLayout>